@model IEnumerable<EventosInformatica.Web.Models.Entities.Client>

@{
    ViewData["Title"] = "Clientes";
}


<div style="padding-top: 40px;" class="container col-md-12">
    <div class="col col-md-2"></div>
    <div class="co col-md-8">
        <p>
            <a asp-action="Create" class="btn btn-primary btn-sm">Nuevo Cliente</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.User.Email)</th>
                    <th>
                        Phone
                    </th>
                    <th> Eventos</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.PhoneNumber)
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.Events.Count)</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Detalle</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
